@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Equipos.AddJugadorModel
@{
}
<h1>Asignar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label for="IdEquipo">Equipo</label>
        <input type= "text" id = "IdEquipo" name="IdEquipo" class="form-control" value="@Model.equipo.Id" readonly>
    </div> 
    <div class="form-group">
        <label for="IdJugador">Jugador</label>
        <select name="IdJugador" id="IdJugador" name = "IdJugador" class="form-control">
            @foreach (var jugador in Model.jugadores)
            {
                <option value = "@jugador.Id">@jugador.Nombre</option>
            }

        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Asignar Jugador</button> 
</form>
<br><br><a class="btn btn-secondary" asp-page="./Index">Volver</a>