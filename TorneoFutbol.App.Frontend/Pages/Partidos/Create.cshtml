@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Partidos.CreateModel
@{
}
<h1>Nuevo Partido</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="partido.FechaYHora">Fecha y Hora</label>
        <input asp-for="partido.FechaYHora" class="form-control" placeholder="Ingrese la Fecha Y Hora del Partido">
        <span class="text-danger" asp-validation-for="partido.FechaYHora"></span>
    </div>  
    <div class="form-group">
        <label for="idEquipoLocal">Equipo Local</label>
        <select name="idEquipoLocal" id="idEquipoLocal" name = "idEquipoLocal" class="form-control">
            @foreach (var equipo in Model.equipos)
            {
                <option value = "@equipo.Id">@equipo.Nombre</option>
            }

        </select>
    </div>
    <div class="form-group">
        <label for="idEquipoVisitante">Equipo Visitante</label>
        <select name="idEquipoVisitante" id="idEquipoVisitante" name = "idEquipoVisitante" class="form-control">
            @foreach (var equipo in Model.equipos)
            {
                <option value = "@equipo.Id">@equipo.Nombre</option>
            }

        </select>
    </div>
    <div class="form-group">
        <label asp-for="partido.MarcadorInicialLocal"></label>
        <input asp-for="partido.MarcadorInicialLocal" class="form-control" placeholder="Ingrese el MarcadorInicialLocal">
        <span class="text-danger" asp-validation-for="partido.MarcadorInicialLocal"></span>
    </div> 
    <div class="form-group">
        <label asp-for="partido.MarcadorInicialVisitante"></label>
        <input asp-for="partido.MarcadorInicialVisitante" class="form-control" placeholder="Ingrese el MarcadorInicialVisitante">
        <span class="text-danger" asp-validation-for="partido.MarcadorInicialVisitante"></span>
    </div> 
    <div class="form-group">
        <label asp-for="partido.MarcadorFinalLocal"></label>
        <input asp-for="partido.MarcadorFinalLocal" class="form-control" placeholder="Ingrese el MarcadorFinal del equipo local">
        <span class="text-danger" asp-validation-for="partido.MarcadorFinalLocal"></span>
    </div> 
    <button type="submit" class="btn btn-primary btn-block">Crear Partido</button> 
</form>
<br><br><a class="btn btn-secondary" asp-page="./Index">Volver</a>