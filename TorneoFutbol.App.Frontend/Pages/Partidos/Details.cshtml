@page
@model TorneoFutbol.App.Frontend.Pages.Partidos.DetailsModel
@{
}
<h1>Detalle de los Partidos</h1>
<table class="table table-striped">
        <tr>
            <th scope="col">MarcadorInicialLocal</th>
            <td>@Model.partido.MarcadorInicialLocal</td>
        </tr>
        <tr>
            <th scope="col">MarcadorInicialVisitante</th>
            <td>@Model.partido.MarcadorInicialVisitante</td>
        </tr>    
        <tr>
            <th scope="col">MarcadorFinal</th>
            <td>@Model.partido.MarcadorFinal</td>
        </tr>    
        <tr>
            <th scope="col">Equipo Local</th>
            @if (Model.partido.EquipoLocal == null)
            {
                <th>
                    <a class="btn btn-secondary" asp-page="./AddEquipoLocal" asp-route-id="@Model.partido.Id">
                        Asignar Equipo Local
                    </a>
                </th>
            }
            else
            {
                <td>@Model.partido.EquipoLocal.Nombre</td>
            }
            
        </tr> 
            
        
</table>

<a class="btn btn-secondary" asp-page="./Index">Volver</a>