@page
@model TorneoFutbol.App.Frontend.Pages.Jugadores.IndexModel
@{
}
<h1>Listado de Jugadores</h1>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Numero</th>
            <th scope="col">Posicion</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Jugador in Model.jugadores)
        {
            <tr>
                <td>@Jugador.Nombre</td>
                <td>@Jugador.Numero</td>
                <td>@Jugador.Posicion</td>
                <td><a class="btn btn-secondary" asp-page="./Details" asp-route-id="@Jugador.Id">Detalle</a></td>
            </tr>
        }
        
    </tbody>
    
</table>
<a class="btn btn-primary" asp-page="./Create">Crear Jugador</a>
